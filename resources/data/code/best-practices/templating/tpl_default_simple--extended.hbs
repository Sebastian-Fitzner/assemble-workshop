<html lang="en" class="no-js"> <!--<![endif]-->

{{> _head }}

<body class="{{ bodyclass }}">

	<!-- Navbar
	================================================== -->
	{{> _nav }}

	<!-- Header
	================================================== -->
	<header class="masthead subhead">
		<div class="container">
			<h1> {{ title }} </h1>
		</div>

		{{#is search "true"}}
			<div id="search">
				{{> search }}
			</div>
		{{/is}}
	</header>

	<!-- Page content
	================================================== -->
	<main class="main" id="main">
		<div class="container">
			<h1> {{{ title }}} </h1>

			<h2 class="lead"> {{{ lead }}} </h2>
			{{> body }}
		</div>
	</main>

	<!-- Footer
	================================================== -->
	<footer class="footer">
		{{#is footer-alternative "true"}}
			<div id="search">
				{{> footer--alternative }}
			</div>
		{{else}}
			{{> footer }}
		{{/is}}
	</footer>
</body>
</html>