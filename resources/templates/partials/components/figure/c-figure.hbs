---
component: Figure
---

<figure class="c-figure {{figure-class}}">

	{{#if figure-picture}}
		{{partial "c-picture"}}
	{{else}}{{#if figure-video}}
		{{partial "c-video"}}
	{{/if}}{{/if}}

	{{#if figure-caption}}
		<figcaption class="figure__caption">
			{{ figure-caption }}
		</figcaption>
	{{/if}}

</figure>